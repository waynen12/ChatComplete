{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Knowledge.Mcp": "Debug",
      "KnowledgeEngine": "Information",
      "ModelContextProtocol": "Debug"
    }
  },
  "Auth0": {
    "Enabled": false,
    "Domain": "contextbridge.eu.auth0.com",
    "Audience": "https://knowledge-manager-mcp"
  },
  "ChatCompleteSettings": {
    "DatabasePath": "/opt/knowledge-api/out/data",
    "OpenAIModel": "gpt-5",
    "GoogleModel": "gemini-2.5-flash",
    "OllamaModel": "gemma3:12b",
    "OllamaBaseUrl": "http://localhost:11434",
    "AnthropicModel": "claude-sonnet-4-20250514",
    "Temperature": 0.7,
    "ChatMaxTurns": 10,
    "EmbeddingProviders": {
      "ActiveProvider": "Ollama",
      "Ollama": {
        "ModelName": "nomic-embed-text",
        "Dimensions": 768,
        "MinRelevanceScore": 0.3,
        "MaxTokens": 2048,
        "Description": "Ollama nomic-embed-text model"
      }
    },
    "ChunkCharacterLimit": 4096,
    "ChunkLineTokens": 60,
    "ChunkParagraphTokens": 200,
    "ChunkOverlap": 40,
    "MaxCodeFenceSize": 10240,
    "TruncateOversizedCodeFences": true,
    "FilePath": "/tmp/knowledge-mcp/",
    "LogfileSizeLimit": 10485760,
    "Atlas": {
      "BaseUrl": "https://cloud.mongodb.com/api/atlas/v1.0",
      "ProjectName": "Project 0",
      "ClusterName": "KnowledgeMcp",
      "DatabaseName": "KnowledgeMcp",
      "CollectionName": "Tracker",
      "SearchIndexName": "default",
      "VectorField": "embedding",
      "NumDimensions": 768,
      "SimilarityFunction": "cosine"      
    },
    "VectorStore": {
      "Provider": "Qdrant",
      "Qdrant": {
        "Host": "localhost",
        "Port": 6334,
        "UseHttps": false,
        "ApiKey": null,
        "VectorSize": 768,
        "DistanceMetric": "Cosine",
        "DefaultCollection": {
          "DefaultSegmentNumber": 2,
          "MaxSegmentSize": 20000,
          "ReplicationFactor": 1,
          "WriteConsistencyFactor": 1,
          "Hnsw": {
            "M": 16,
            "EfConstruct": 200,
            "MMax": 16,
            "Ef": 128
          }
        }
      }
    }
  },
  "OpenTelemetry": {
    "ServiceName": "Knowledge.Mcp",
    "ServiceVersion": "1.0.0"
  },
  "McpServerSettings": {
    "Search": {
      "DefaultResultLimit": 5,
      "MaxResultLimit": 50,
      "DefaultMinRelevance": 0.3,
      "MaxPreviewLength": 200
    },
    "ModelRecommendation": {
      "DefaultModelCount": 3,
      "MaxModelCount": 20,
      "DefaultTimePeriod": "monthly",
      "DefaultProvider": "all",
      "DefaultComparisonFocus": "all"
    },
    "KnowledgeAnalytics": {
      "DefaultIncludeMetrics": true,
      "DefaultSortBy": "activity",
      "DefaultMinUsageThresholdDays": 30
    },
    "SystemHealth": {
      "DefaultIncludeDetailedMetrics": true,
      "DefaultScope": "all",
      "DefaultIncludeRecommendations": true
    },
    "Resources": {
      "EnableCaching": true,
      "CacheDurationSeconds": 300,
      "MaxResourcesPerList": 1000,
      "EnableDocumentContent": true,
      "MaxDocumentSizeBytes": 10485760,
      "EnableResourceSubscriptions": false,
      "DefaultMimeType": "text/plain",
      "EnableStatisticsAggregation": true
    },
    "HttpTransport": {
      "Port": 5001,
      "Host": "0.0.0.0",
      "SessionTimeoutMinutes": 30,
      "EnableStatelessMode": false,
      "Cors": {
        "Enabled": true,
        "AllowedOrigins": [
          "http://localhost:3000",
          "http://localhost:5173",
          "http://localhost:7040",
          "http://192.168.50.203",
          "http://192.168.50.203:7040",
          "https://copilot.github.com",
          "https://claude.ai"
        ],
        "AllowAnyOrigin": false,
        "AllowCredentials": true,
        "ExposedHeaders": [
          "Content-Type",
          "Cache-Control",
          "X-Request-Id",
          "Mcp-Session-Id"
        ]
      },
      "OAuth": null
    },
    "General": {
      "OllamaBaseUrl": "http://localhost:11434",
      "DefaultEmbeddingModel": "nomic-embed-text",
      "EnableDetailedErrorLogging": true,
      "EnablePerformanceMonitoring": true
    }
  }
}