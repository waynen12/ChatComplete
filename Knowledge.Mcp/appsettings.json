{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Knowledge.Mcp": "Debug",
      "KnowledgeEngine": "Information",
      "ModelContextProtocol": "Information"
    }
  },
  "DatabasePath": "data/knowledge.db",
  "VectorStore": {
    "Provider": "Qdrant",
    "Qdrant": {
      "Host": "localhost",
      "Port": 6333,
      "UseHttps": false,
      "Timeout": 30
    }
  },
  "ChatCompleteSettings": {
    "SystemPrompt": "You are a helpful AI assistant for the Knowledge Manager system.",
    "Temperature": 0.7,
    "MaxTokens": 4000,
    "OllamaBaseUrl": "http://localhost:11434"
  },
  "OpenTelemetry": {
    "ServiceName": "Knowledge.Mcp",
    "ServiceVersion": "1.0.0"
  }
}